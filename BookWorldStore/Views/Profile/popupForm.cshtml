@using BookWorldStore.Repository;
<!-- Change information model -->

<div class="modal fade" id="change_infor_model" tabindex="-1" aria-labelledby="change_infor_model" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content color-popup-model">
            <form id="change_infor_form" method="post" asp-controller="Profile" asp-action="ChangesImformation">
                <div class="modal-header">
                    <h1 class="modal-title title-model-custom" id="exampleModalLabel">Change Information</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body body-model-custome">
                    <label for="user_phone" class="form-label">Phone</label>
                    <input type="text" name="phone" class="form-control" style="margin-bottom:1rem" value="@Model.phone" />
                    <label for="user_address" class="form-label">Address</label>
                    <input type="text" name="address" class="form-control" style="margin-bottom:1rem" value="@Model.address" />
                    <label for="user_gender" class="form-label">Gender</label>
                    <input type="radio" name="gender" value="male" style="cursor:pointer; margin-left:2rem;" @(Model.gender == "male" ? "checked" : "") /> <span style="color:white">Male</span>
                    <input type="radio" name="gender" value="female" style="cursor:pointer; margin-left:2rem;" @(Model.gender == "female" ? "checked" : "") /> <span style="color:white">Female</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="black-button" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btn_ok_change_infor" class="yellow-button">OK</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Change password model -->
<div class="modal fade" id="change_pass_model" tabindex="-1" aria-labelledby="change_pass_model" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content color-popup-model">
            <form id="change_password_form" asp-controller="Profile" asp-action="ChangesPassword">
                <div class="modal-header">
                    <h1 class="modal-title title-model-custom">Change password</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body body-model-custome">
                    <label for="user_current_pass" class="form-label">Current password</label>
                    <input name="currentPass"type="password" style="margin-bottom:1rem" id="user_current_pass" class="form-control" />
                    <label for="user_new_pass" class="form-label">New password</label>
                    <input name="newPass" type="password" style="margin-bottom:1rem" id="user_new_pass" class="form-control" />
                    <label for="user_confirm_pass" class="form-label">Confirm password</label>
                    <input name="confirmPass" type="password" id="user_confirm_pass" class="form-control" />
                    <span style="margin-left: 25%;color:red; font-size:13px" id="error_change_pass"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="black-button" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="yellow-button" id="btn_ok_change_pass">OK</button>
                </div>
            </form>
        </div>
    </div>
</div>
