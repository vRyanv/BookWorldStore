@{
    Layout = "_SupperAdminLayout";
    ViewBag.title = "Category Request";
}

@model IEnumerable<Category>

<!-- confirm refuse model -->
<div class="modal fade" id="exampleModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Refuse</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Refuse this request
            </div>
            <div class="modal-footer">
                <button type="button" id="btn_ok_delete" class="btn btn-success">OK</button>
            </div>
        </div>
    </div>
</div>
<!-- confirm delete model -->

<div class="col" style="margin-left: 17rem;">
    <div id="root_body">
        <div style="padding-top: 5rem">
            <table class="table table-hover pt-10">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category cate in Model)
                    {
                        <tr>
                            <th scope="row">@cate.cate_id</th>
                            <td>@cate.name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="SupperAdmin" asp-action="AgreeCate" asp-route-id="@cate.cate_id">
                                        <button type="button" class="btn btn-primary">Agree</button>
                                        </a>
                                    <a asp-controller="SupperAdmin" asp-action="RefuseCate" asp-route-id="@cate.cate_id">
                                        <button type="button" class="btn btn-danger">refuse</button>
                                     </a>
                               
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>