@model IEnumerable<Category>
@{
    Layout = "_AdminLayout";
    ViewBag.title = "Category";
}
<div style="width: 100%;height: 4rem;background-color: white; position: fixed; z-index: 1; box-shadow: 0 2px 5px gray">
    <nav class="navbar">
        <div class="container-fluid">
            <div class="d-flex" id="search_box_product" role="search">
                <a asp-controller="Category" asp-action="Create"><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new_product_model" style="margin-left: 2rem">New category</button></a>
            </div>
        </div>
    </nav>
</div>
<div style="padding-top: 5rem">
    <table class="table table-hover pt-10">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cate in Model)
            {
                <tr>
                    <th scope="row">@cate.cate_id</th>
                    <td> @cate.name </td>
                    <td>
                        @if(cate.status == 2)
                        {
                            <div>Processing</div>
                        }
                        else
                        {
                            <div class="btn-group" role="group">
                                <a href="/category/edit/@cate.cate_id"><button type="button" class="btn btn-primary">Edit</button></a>
                                <button data-bs-toggle="modal" data-bs-target="#confirm_delete_modal" type="button" class="btn btn-danger btn-delete-cate" data-cate-id="@cate.cate_id">Delete</button>
                            </div>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="confirm_delete_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>Delete this category?</div>
            </div>  
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-ok-delete">Delete</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            var deleteId = ""
            $('.btn-delete-cate').click(function(){
                deleteId = $(this).data('cate-id')
            })

            $('.btn-ok-delete').click(function () {
                var form = $("<form>");
                form.attr({
                    method: "POST",
                    action: "/Category/Delete"
                });

                var IdInput = $("<input>");
                IdInput.attr({
                    type: "text",
                    name: "id",
                    value: deleteId
                });
                form.hide()
                form.append(IdInput);
                form.appendTo("body");
                form.submit();
            })
        })
    </script>
}