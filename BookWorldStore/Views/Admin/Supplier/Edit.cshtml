@model Supplier
@{
    Layout = "_AdminLayout";
    ViewBag.title = "Supplier";
}

<form asp-controller="Supplier" asp-action="Edit" id="Edit_supplier_form">
    <div style="text-align: center">
        <h1 class="mt-3">Update supplier</h1>
    </div>
    <div class="add-form mt-5 col-sm-11">
        <div class="mb-3">
            <label for="txt_sup_name" class="form-label">Supplier name</label>
            <input type="text" class="form-control" id="txt_sup_name_edit" placeholder="Supplier name" asp-for=name value=" @Model.name ">
            <span id="empty_name_edit" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none"></span>
        </div>
        <div class="mb-3">
            <label for="txt_sup_address" class="form-label">Address</label>
            <input type="text" class="form-control" id="txt_sup_address_edit" placeholder="Address" asp-for=address value="@Model.address">
            <span id="empty_address_edit" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display: none"></span>
        </div>
        <div style="text-align: end">
            <input type="submit" class="btn btn-success" id="btn_submit_supplier" value="Update" data-sup-id="@Model.sup_id %>">
            <a asp-action="Index" asp-controller="Supplier"><input type="button" class="btn btn-warning" value="cancel"></a>
        </div>
    </div>
</form>
@section Scripts{
    <script src="/js/admin/supplier.js">

    </script>
}
