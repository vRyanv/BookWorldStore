@{
    Layout = "_AdminLayout";
    ViewBag.title = "Supplier";
}
@model Supplier
<form asp-controller="Supplier" asp-action="Create" id="Create_supplier_form">
<div style="text-align: center">
    <h1 class="mt-3">Add new supplier</h1>
</div>
<div class="add-form mt-5 col-sm-11">
    <div class="mb-3">
        <label for="txt_sup_name" class="form-label">Name</label>
        <input type="text" class="form-control" id="txt_sup_name" placehoqlder="Supplier name" asp-for="name">
        <span id="empty_name" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display:none;"></span>
    </div>
    <div class="mb-3">
        <label for="txt_sup_address" class="form-label">Address</label>
        <input type="text" class="form-control" id="txt_sup_address" placeholder="Address" asp-for="address">
        <span id="empty_address" class="bi-x-circle-fill" style="vertical-align: -webkit-baseline-middle; color: red; display:none"></span>
    </div>
    <div style="text-align: end">
        <input type="submit" class="btn btn-success" id="btn_submit_supplier" value="Add">
        <a asp-action="Index" asp-controller="Supplier"><input type="button" class="btn btn-warning" value="cancel"></a>
    </div>
</div>
</form>
@section Scripts{
    <script src="/js/admin/supplier.js">

    </script>
}
